{% extends 'base.html.twig' %}

{% block title %}Formulaire de Dépense{% endblock %}

{% block body %}
    <h1>Formulaire de Dépense</h1>

    {{ form_start(form) }}
    {{ form_row(form.date) }}

    <button type="submit">Enregistrer</button>
    {{ form_end(form) }}

    {% if form.isSubmitted() and form.isValid() %}
        <h2>Date sélectionnée : {{ dateDuJour }}</h2>
    {% endif %}

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Somme</th>
                <th>Achat</th>
                <th>Remarque</th>
            </tr>
        </thead>
        <tbody>
            {# Afficher ici les dépenses existantes depuis la base de données #}
        </tbody>
    </table>
{% endblock %}
